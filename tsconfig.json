{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2020",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/types/*",
            ]
        },
        "lib": [
          "DOM",
          "ES2020"
        ],
        "declaration": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ]
}
